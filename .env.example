# WireGuard VPN Configuration
# Copy this file to .env and fill in your WireGuard credentials

# Required: WireGuard Private Key (from your VPN provider)
WIREGUARD_PRIVATE_KEY=your_private_key_here

# Required: WireGuard Public Key (server public key from your VPN provider)
WIREGUARD_PUBLIC_KEY=your_server_public_key_here

# Optional: WireGuard Pre-shared Key (if your VPN provider requires it)
WIREGUARD_PRESHARED_KEY=

# Required: WireGuard Client IP Address (e.g., 10.64.222.21/32)
WIREGUARD_ADDRESSES=10.0.0.2/32

# Required: WireGuard Endpoint IP (must be an IP address, not a domain name)
WIREGUARD_ENDPOINT_IP=1.2.3.4

# Optional: WireGuard Endpoint Port (default: 51820)
WIREGUARD_ENDPOINT_PORT=51820

# General Configuration
TZ=UTC

# User and Group IDs for Transmission (run 'id' command to find yours)
PUID=1000
PGID=1000

# Download Paths (relative or absolute)
DOWNLOADS_PATH=./downloads
WATCH_PATH=./watch
