# WireGuard VPN Configuration
# Copy this file to .env and fill in your WireGuard credentials

# Required: WireGuard Private Key (from your VPN provider)
WIREGUARD_PRIVATE_KEY=your_private_key_here

# Required: WireGuard Server Public Key (from your VPN provider)
WIREGUARD_PUBLIC_KEY=your_server_public_key_here

# Optional: WireGuard Pre-shared Key (if your VPN provider requires it)
WIREGUARD_PRESHARED_KEY=

# Required: WireGuard Client IP Address with CIDR (e.g., 10.64.222.21/32)
WIREGUARD_ADDRESS=10.0.0.2/32

# Required: WireGuard Endpoint (can be domain name or IP:port, e.g., vpn.example.com:51820)
WIREGUARD_ENDPOINT=vpn.example.com:51820

# Optional: DNS servers (comma-separated, leave empty to use system DNS)
WIREGUARD_DNS=

# Optional: WireGuard Listen Port (leave empty for automatic)
WIREGUARD_LISTEN_PORT=

# Optional: MTU (Maximum Transmission Unit, leave empty for default 1420)
WIREGUARD_MTU=

# General Configuration
TZ=UTC

# User and Group IDs for Transmission (run 'id' command to find yours)
PUID=1000
PGID=1000

# Download Paths (absolute paths recommended)
DOWNLOADS_PATH=/path/to/downloads
WATCH_PATH=/path/to/watch
